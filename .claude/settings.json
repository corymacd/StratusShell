{
  "permissions": {
    "allow": [
      "gh"
    ],
    "deny": [],
    "ask": []
  },
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp"
      ]
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "github-mcp-server"
      ]
    },
    "linear": {
      "command": "npx",
      "args": [
        "-y",
        "@mseep/linear-mcp"
      ]
    }
  }
}
